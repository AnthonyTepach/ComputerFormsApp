<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="175dp"
    android:layout_margin="10dp"
    android:background="@drawable/ic_fondo_contactos"
    android:orientation="horizontal"
    android:padding="20dp">

    <ImageView
        android:id="@+id/imageView_list_item"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_launcher_background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_list_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:text="Copy your Lorem ipsum "
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_list_correo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:gravity="left"
            android:text="Lorem ipsum dolor sit amet"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/txt_list_telefono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:gravity="left"
            android:text="Lorem ipsum dolor sit amet"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/txt_list_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:gravity="left"
            android:text="Lorem ipsum dolor sit amet"
            android:textSize="13dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right|bottom"
            android:gravity="right|bottom"

            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_list_email"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:background="#fff"
                android:maxWidth="37dp"
                app:srcCompat="@drawable/ic_mail" />

            <ImageButton
                android:id="@+id/btn_list_call"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:background="#fff"
                app:srcCompat="@drawable/ic_call" />

            <ImageButton
                android:id="@+id/btn_list_whats"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:background="#fff"
                app:srcCompat="@drawable/ic_whatsapp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>